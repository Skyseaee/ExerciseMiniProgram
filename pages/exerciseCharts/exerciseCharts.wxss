.container {
  position: absolute;
  top: 320rpx;
  bottom: 0;
  left: 0;
  right: 0;
 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.info {
  display: flex;
  margin-left: 60rpx;
  margin-top: 80rpx;
  color: #222;
  font-size: 28rpx;
  font-weight: 400;
}

text {
  margin-right: 40rpx;
}

.switch {
  display: flex;
  justify-content: center;
  border-bottom: solid 2rpx #f3f3f3;
}

.select {
  color: #1569E4;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  letter-spacing: 4rpx;
  height: 100rpx;
}

.unselect {
  color: #222;
  width: 375rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  letter-spacing: 4rpx;
}

.infos {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 375rpx;
  justify-content: center;
}

.current {
  background-color: #1569E4;
  height: 8rpx;
  width: 60rpx;
  border-radius: 5rpx;
}