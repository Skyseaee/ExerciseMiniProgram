/* pages/component/feedbackInput/feedbackInput.wxss */
.modal-mask {  
  position: fixed;  
  top: 0;  
  left: 0;  
  width: 100%;  
  height: 100%;  
  z-index: 9;  
  background-color: rgba(0, 0, 0, 0.5);  
  display: flex;  
  align-items: center;  
  justify-content: center;  
}  
  
.modal {  
  position: fixed;
  top: 420rpx;  
  left: 120rpx;   
  height: 30%; 
  z-index: 10; 
  background-color: #FFFFFF;  
  padding: 20rpx;  
  border-radius: 50rpx;  
  width: 100%; /* 根据需要调整宽度 */  
  max-width: 500rpx; /* 限制最大宽度 */  
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}  

.modal input {  
  width: 420rpx;
  height: 60rpx;
  margin-bottom: 30rpx;  
  padding: 10rpx;  
  border: 1rpx solid #ccc;  
  border-radius: 12rpx;  
}  
 
.buttons {
  display: flex;
  width: 90%;
  justify-content: space-between;
  margin-top: 40rpx;
}

.modal button {
  width: 200rpx;  
  padding: 10rpx;  
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center; 
  border-radius: 8px;  
  background-color: #3481a0; /* 蓝色背景，可以根据需要调整 */  
  color: #FFFFFF;  
  font-size: 26rpx;
  letter-spacing: 12rpx;
  font-weight: 500;  
}

.picker {
  width: 434rpx;
  height: 80rpx;
  line-height: 40rpx;
  text-align: center;
  color: #888;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}