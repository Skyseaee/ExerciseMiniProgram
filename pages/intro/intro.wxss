/* 为text标签添加样式 */
.content {
  width: 90%;
  margin: 40rpx auto;
  text-align: justify;
}

.info {
  margin-bottom: 48rpx;
  color: #505050;
  font: 400;
  font-size: 28rpx;
  line-height: 1.6rem;
}

.title {
  margin-bottom: 16rpx;
  font-weight: 600;
  color: #505050;
}

/* 添加样式来突出显示重要信息 */
.important {
  font-weight: bold;
  color: #ec9955; /* 突出颜色，可以根据需要更改 */
}

.button {
  width: 80rpx;
  height: 80rpx;
}
