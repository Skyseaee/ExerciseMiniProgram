/* pages/shareAndLock/shareAndLock.wxss */
page {
  background-color: rgba(241, 241, 241);
}

.bg {
  background-image: url(http://www.skyseaee.cn/uploads/exercise_img/20240611/666809a9afcaa.png);
  background-repeat: no-repeat;
  background-size: cover;
  height: 600rpx;
}

.title {
  font-size: 56rpx;
  color: #1569E4;
  font-weight: 400;
  padding-top: 120rpx;
  padding-left: 40rpx;
}

.small-title {
  font-size: 28rpx;
  color: #777;
  font-weight: 400;
  padding-top: 20rpx;
  margin-bottom: 40rpx;
  padding-left: 40rpx;
}

.infos {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  width: 90%;
  margin: 40rpx auto;
  margin-top: 40rpx;
  box-shadow: 0px 1px 12px 5px rgba(236,236,236,0.5);
}

.cover {
  height: 160rpx;
  width: 280rpx;
  margin: 20rpx 30rpx 20rpx 0rpx;
}

.right-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.names {
  font-size: 32rpx;
  padding: 0 !important;
  color: #555;
  font-weight: 600;
  letter-spacing: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon {
  height: 36rpx;
  width: 36rpx;
  margin-left: 30rpx;
}

.price {
  font-size: 28rpx;
  line-height: 28rpx;
  color: #888;
  text-decoration: line-through;
}

.curr-dis {
  margin-top: 20rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  text-decoration: none;
  color:  #FB632F;
}

.record {
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 16rpx;
  padding-bottom: 24rpx;
  box-shadow: 0px 8px 11px 0px rgba(235,233,233,0.5);
}

.title-record {
  padding-top: 24rpx;
  margin-left: 36rpx;
  margin-bottom: 40rpx;
  font-size: 20px;
  color: #000000;
  text-align: left;
  display: flex;
  font-weight: 500;
  align-items: center;
}

.disc {
  margin-top: 40rpx;
  padding-bottom: 40rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  color: #838383;
  text-align: center;
  font-weight: 400;
}

.lists {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
  align-items: center;
  margin-top: 24rpx;
}

.nickname {
  font-size: 28rpx;
  width: 240rpx;
  color: #555;
  overflow: hidden;
  white-space: nowrap; /* 确保文本不会换行 */
  text-overflow: ellipsis; /* 在行尾显示省略号 */
  font-weight: 400;
}

.avatar {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
}

.lock-but {
  margin: 20rpx auto;
  background: #1569E4;
  border-radius: 44rpx;
  height: 88rpx;
  width: 320rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  color: #FFFFFF;
  text-align: center;
  letter-spacing: 4rpx;
}

.share-btn {
  background: #3498DB;
  height: 60rpx;
  border-radius: 30rpx;
  width: 200rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: 400;
  margin-top: 20rpx;
  margin-left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 8px 11px 0px rgba(235,233,233,0.5);
}