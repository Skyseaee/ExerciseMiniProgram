/* pages/wrongQuestion/wrongQuestion.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.question {
  margin: 20rpx;
  margin-top: 80rpx;
  color: #505050;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 500;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.questionTexts {
  width: 90%;
}

.questionInfo {
  display: flex;
  text-align: center;
  width: 95%;
  margin: 0 auto;
  margin-bottom:36rpx;
  justify-content: space-between;
}

.icons {
  width: 90%;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 40rpx;
  align-items: center;
}

.nextQuestion {
  display: inline;
  margin-left: 20rpx;
  height: 56rpx;
  width: 56rpx;
}

.foreQuestion {
  display: inline;
  margin-left: 60rpx;
  height: 56rpx;
  width: 56rpx;
} 

.favorQuestion {
  display: inline;
  height: 76rpx;
  width: 76rpx;
  margin-right: 12rpx;
}

.options {
  width: 90%;
  padding: 20rpx;
}

.option {
  display: flex;
  align-items:center;
  padding: 10rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  cursor: pointer;
  box-shadow: 0px 4px 8px 0px rgba(219,220,233,0.8);
}

.optionSelected {
  display: flex;
  align-items:center;
  padding: 10rpx;
  border: 2rpx solid #0FB371;
  color: #0FB371;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  cursor: pointer;
  box-shadow: 0px 4px 8px 0px rgba(219,220,233,0.6);
}

.optionText {
  font-size: 30rpx;
  margin: 14rpx;
  margin-left: 24rpx;
}

.comment {
  font-size: 40rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.comments {
  width: 90%;
  color: #505050;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 500;
  padding: 20rpx;
  padding-bottom: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 0rpx 8rpx rgba(0, 0, 0, 0.3);
}

.answers {
  display: inline;
  margin-right: 40rpx;
}

.correct {
  color: #0FB371;
}

.wrong {
  color: #c5573c;
}

.feeds {
  display: flex;
  justify-content:space-between;
  align-items: center;
}

.icon {
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
}

.feedback {
  display: flex;
  align-items: center;
  background-color: #f0dada;
  padding: 6rpx 18rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  letter-spacing: 4rpx;
}

.commentsimg {
  width: 100%;
  height: 35vh;
}

.separator {  
  width: 95%; /* 根据需要设置宽度 */  
  height: 2rpx; /* 分隔线的高度 */  
  background-color: #ddd; /* 分隔线的颜色 */  
  margin: auto; /* 分隔线的上下外边距 */  
  margin-bottom: 20rpx;
}

.borders {
  padding: 16rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.process {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

progress {
  width: 560rpx;
  margin-right: 20rpx;
  border-radius: 40rpx; /* 设置进度条的圆角 */
  height: 40rpx; /* 设置进度条的高度 */
}

.progress50 .wx-progress-inner-bar {
  border-radius: 16rpx !important;
  background: linear-gradient(to right, #f3f3f3, #6dd5fa) !important;
}
.progress90 .wx-progress-inner-bar {
  border-radius: 16rpx !important;
  background: linear-gradient(to right, #f3f3f3, #6dd5fa, #2980b9) !important;  
}