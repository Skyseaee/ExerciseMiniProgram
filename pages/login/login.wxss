/* pages/login/login.wxss */
button::after{
  border: none;
}
button {
  background-color: #fff;
}

.avatar{
  width: 80px;
  height: 80px;
  padding:0;
  background: none;
  border-radius: 50%;
  margin-top: 10px;
}
.avatar image{
  width: 80px;
  height: 80px;
  border-radius: 100px;
}
.notice {
    font-size: 28rpx;
}
.weui-input{
  width: 90%;
  display:flex;
  align-items:center;
  height:45px;
  line-height:45px;
  margin:20px auto;
  background: #eee;
  border-radius: 5px;
  padding-left: 15px;
}

.sub-button {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  border-radius: 50rpx;
  width: 480rpx;
  margin-top: 80rpx;
  background-color: #1569E4;
  color: #eee;
  letter-spacing: 12rpx;
}