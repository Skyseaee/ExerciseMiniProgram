/**index.wxss**/
.page{
  background-color:#f7f7f7;
}

.swiper{
  display: flex;
  margin: 0 auto;
  width: 700rpx;
  height: 422rpx;
  background-color: #fff;
}
.pic {
  width: 100%;
  height: calc(100vw*9/16);
  vertical-align: middle;
  border-radius: 12rpx;
}

.border {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  width: 680rpx;
  height: 160rpx;
  margin: 0 auto;
  margin-top: 32rpx;
  padding: 6rpx;
}


.countdowntext {
    display: flex;
    padding-top: 32rpx;
    margin-bottom: 32rpx;
    margin-left: 32rpx;
    font-size: 36rpx;
    letter-spacing: 2rpx;
    color: #202020;
    background-color:#f7f7f7;
}

.persisticon {
    display: inline-block;
    margin: 12rpx;
    width: 86rpx;
    height: 86rpx;
}

.cards {
  display: flex;
  width: 50%;
  align-items: center;
}

.button-hover {
  display: flex;
  width: 50%;
  align-items: center;
  background-color: #ccc;
}

.persistdays {
  display: inline;
  font-size: 30rpx;
  color: #202020;
}

.rights {
  margin-right: 28rpx;
}

.infos-text {
  display: inline;
  margin-top: 4rpx;
  font-size: 24rpx;
  color: #808080;
}

.infobar {
  display: flex;
  width: 92%;
  align-items: center; /* 横向居中对齐 */
  justify-content: space-between;
  background-color:#fff;
}

.line {
  margin: 16rpx auto;
  height: 2rpx;
  width: 95%;
  background-color: #ddd; /* 分割线颜色 */
}

.vertical-line {
  width: 2rpx;
  height: 100rpx; /* 竖分割线的高度 */
  background-color: #EBEBEB; /* 分割线的颜色 */
}

.cards-right {
  display: flex;
  justify-content: flex-end;
  width: 50%;
  align-items: center;
}

.right {
  display: flex;
  justify-content: flex-end;
}

.divider {
  margin: 60rpx auto;
  margin-bottom: 40rpx;
  height: 2rpx;
  width: 90%;
  background-color: #bbb; /* 分割线颜色 */
}

/* 样式设置 */
.row {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.item {
  flex: 0 0 50%; /* 每行两个，占据一半宽度 */
  box-sizing: border-box;
  padding-left: 12rpx;
  padding-right: 12rpx;
  margin-bottom: 28rpx;
}

.rectangle {
    width: 100%;
    height: 192rpx; /* 根据需要调整高度 */
    border-radius: 4rpx; /* 设置圆角 */
    display: flex;
    flex-direction: column;
}

.infos {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.covers {
  width: 100%;
}

.title-text{
  display: flex;
  margin-top: 36rpx;
  margin-bottom: 28rpx;
  margin-left: 32rpx;
  font-size: 36rpx;
  letter-spacing: 2rpx;
  color: #202020;
}