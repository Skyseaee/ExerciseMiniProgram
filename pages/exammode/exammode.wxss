.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.question {
  margin: 20rpx;
  margin-top: 80rpx;
  color: #505050;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 500;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.questionInfo {
  display: flex;
  text-align: center;
  width: 90%;
  margin: 0 auto;
  margin-bottom:36rpx;
  justify-content: space-between;
}

.nextQuestion {
  display: inline;
  margin-left: 20rpx;
  border: 2px solid #aaa;
  border-radius: 12rpx;
  padding: 4rpx;
  height: 40rpx;
  width: 40rpx;
}

.foreQuestion {
  display: inline;
  margin-left: 60rpx;
  border: 2px solid #aaa;
  border-radius: 12rpx;
  padding: 4rpx;
  height: 40rpx;
  width: 40rpx;
} 

.favorQuestion {
  display: inline;
  border: 2px solid #aaa;
  border-radius: 12rpx;
  padding: 4rpx;
  height: 40rpx;
  width: 40rpx;
}

.functions {
  display: flex;
  align-items: center;
}

.options {
  margin-bottom: 64rpx;
  width: 90%;
}

.option {
  display: flex;
  align-items:center;
  padding: 10rpx;
  color: #505050;
  border: 2px solid #aaa;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  cursor: pointer;
}

.optionSelected {
  display: flex;
  align-items:center;
  padding: 10rpx;
  color: #3481a0;
  border: 2px solid #3481a0;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  cursor: pointer;
}

.optionText {
  font-size: 32rpx;
  margin: 14rpx;
  line-height: 48rpx;
  margin-left: 24rpx;
}

.commentsimg {
  width: 100%;
  height: 15vh;
}

.submit-button {
  display: flex;
  border-radius: 30rpx;
  height: 60rpx;
  width: 140rpx;
  border: 3rpx solid #3481a0;
  color: #3481a0;
  margin-left: 32rpx;
  font-size: medium;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  cursor: pointer;
}

.comment {
  font-size: 40rpx;
  margin-bottom: 32rpx;
  margin-top: 48rpx;
}

.comments {
  margin-top: 40rpx;
  color: #505050;
  font-size: 30rpx;
  line-height: 1.6rem;
  font-weight: 400;
  width: 90%;
}

.next-button {
  display: flex;
  padding: 10rpx;
  background-color: #2196f3;
  color: #fff;
  align-items:center;
  text-align: center;
  cursor: pointer;
  display: none; /* 默认隐藏，只有在 showNextButton 为 true 时显示 */
}

.answers {
  display: inline;
  margin-right: 40rpx;
}

.correct {
  color: #3481a0;
}

.wrong {
  color: #c5573c;
}

.icon {
  display: inline;
  height: 36rpx;
  width: 36rpx;
}

.control {
  position: fixed;
  display: flex;
  width: 82%;
  height: 200rpx;
  background-color: #fff;
  box-shadow: 0px 8rpx 8rpx rgba(0, 0, 0, 0.3); /* 添加上边的阴影效果 */
  border-radius: 24rpx;
  padding-top: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  font-size: large;
  color: #505050;
  bottom: 120rpx;
  justify-content: center;
}

.short {
  height: 80rpx;
}

.long {
  height: 720rpx;
}

.last-icon, .next-icon 
{
  display: flex;
  align-items: center;
}

.menu-btn {
  position: fixed;
  z-index: 3;
  bottom: 138rpx;
}

.menu {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  width: 100%;
}

.answer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  padding-left: 30rpx;
}

.answered {
  background-color: #2196f3;
  color: white;
}

.unanswered {
  background-color: grey;
  color: white;
}

.line-break {
  width: 100%;
  height: 10rpx;
}

.info-con {
  height: 680rpx;
}

.exam-info {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  font-size: 36rpx;
}

.switch {
  position: fixed;
  display: flex;
  width: 82%;
  height: 100rpx;
  align-items: center;
  font-size: large;
  color: #707070;
  justify-content: space-between;
  bottom: 120rpx;
}

.close-btn {
  align-self: flex-end;
  height: 100rpx;
  width: 80rpx;
  margin-right: 20rpx;
}

.current {
  background-color: rgb(228, 191, 110);
}

.null {

}

.score-img {
  width: 120rpx;
  height: 120rpx;
}

.score-info {
  display: flex;
  margin-top: 120rpx;
  flex-direction: column;
  align-items: center;
}

.score {
  font-size: 28rpx;
  color: #1f3141;
}

.trueAnswer {
  background-color: #4dda98;
  color: white;
}

.emptyAnswer {
  background-color: #636363;
  color: white;
}

.wrongAnswer {
  background-color: #f05e54;
  color: white;
}

.result{
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  margin-bottom: 32rpx;
  width: 70%;
  justify-content: center;
  border: 2rpx solid #ccc;
  padding: 8rpx 30rpx 8rpx 30rpx;
  border-radius: 24rpx;
  box-shadow: 0px 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 添加上边的阴影效果 */

}

.res-icon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 12rpx;
}

.favor-btn {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  height: 80rpx;
  width: 300rpx;
  background-color: #2196f3;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 8rpx;
  font-size: 30rpx;
}

.feeds {
  display: flex;
  justify-content:space-between;
  align-items: center;
}

.icon {
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
}

.feedback {
  display: flex;
  align-items: center;
  background-color: #f0dada;
  padding: 6rpx 18rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  letter-spacing: 4rpx;
}

.commentsimg {
  width: 100%;
  height: 40vh;
}

.example {
  display: flex;
  margin-bottom: 100rpx;
  margin-left: 20rpx;
  width: 100%;
  justify-content: left;
}

.example-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 18rpx;
  width: 18%;
  height: 56rpx;
  border-radius: 20rpx;
}

.conclusion {
  margin-left: 68rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.separator {  
  width: 90%; /* 根据需要设置宽度 */  
  height: 2rpx; /* 分隔线的高度 */  
  background-color: #ddd; /* 分隔线的颜色 */  
  margin: auto; /* 分隔线的上下外边距 */  
  margin-bottom: 20rpx;
}

.con {
  height: 540rpx;
}