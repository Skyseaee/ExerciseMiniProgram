page {
  background-color: #f9fafa;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.question {
  color: #505050;
  font-size: 30rpx;
  line-height: 50rpx;
  font-weight: 500;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.questionInfo {
  display: flex;
  align-items: center;
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  margin-bottom:36rpx;
  justify-content: space-between;
  box-shadow: 0px 8rpx 8rpx 0px rgba(1,0,70,0.05);
}

.process {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.nextQuestion {
  display: inline;
  margin-left: 20rpx;
  border: 2px solid #aaa;
  border-radius: 12rpx;
  padding: 4rpx;
  height: 40rpx;
  width: 40rpx;
}

.foreQuestion {
  display: inline;
  margin-left: 60rpx;
  border: 2px solid #aaa;
  border-radius: 12rpx;
  padding: 4rpx;
  height: 40rpx;
  width: 40rpx;
} 

.favorQuestion {
  display: inline;
  border-radius: 12rpx;
  padding: 4rpx;
  height: 72rpx;
  width: 72rpx;
}

.functions {
  display: flex;
  align-items: center;
}

.options {
  margin-bottom: 64rpx;
  width: 90%;
}

.option {
  display: flex;
  align-items:center;
  padding: 10rpx;
  color: #505050;
  margin-bottom: 50rpx;
  cursor: pointer;
  background-color: #fff;
  box-shadow: 0px 8rpx 16rpx 0px rgba(219,220,233,0.8);
  border-radius: 8rpx;
}

.optionSelected {
  display: flex;
  align-items:center;
  padding: 10rpx;
  color: #1569E4;
  border: 2rpx solid #1569E4;
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  cursor: pointer;
  box-shadow: 0px 8rpx 16rpx 0px rgba(219,220,233,0.8);
  border-radius: 8rpx;
}

.optionText {
  font-size: 32rpx;
  margin: 14rpx;
  line-height: 48rpx;
  margin-left: 24rpx;
}

.commentsimg {
  width: 100%;
  height: 15vh;
}

.submit-button {
  display: flex;
  border-radius: 20rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  height: 54rpx;
  width: 120rpx;
  border: 3rpx solid #1569E4;
  color: #1569E4;
  margin-left: 24rpx;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
  cursor: pointer;
}

.comment {
  font-size: 40rpx;
  margin-bottom: 32rpx;
  margin-top: 48rpx;
}

.comments {
  margin-top: 40rpx;
  color: #505050;
  font-size: 30rpx;
  line-height: 1.6rem;
  font-weight: 400;
  width: 90%;
}

.next-button {
  display: flex;
  padding: 10rpx;
  background-color: #2196f3;
  color: #fff;
  align-items:center;
  text-align: center;
  cursor: pointer;
  display: none; /* 默认隐藏，只有在 showNextButton 为 true 时显示 */
}

.answers {
  display: inline;
  margin-right: 40rpx;
}

.correct {
  color: #3481a0;
}

.wrong {
  color: #c5573c;
}

.icon {
  display: inline;
  height: 72rpx;
  width: 72rpx;
}

.control {
  position: fixed;
  display: flex;
  width: 50%;
  height: 200rpx;
  background-color: #fff;
  box-shadow: 0px 8rpx 8rpx rgba(0, 0, 0, 0.3); /* 添加上边的阴影效果 */
  border-radius: 24rpx;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: large;
  color: #505050;
  bottom: 120rpx;
  justify-content: center;
}

.short {
  height: 80rpx;
}

.long {
  height: 720rpx;
  width: 640rpx;
}

.last-icon, .next-icon 
{
  display: flex;
  align-items: center;
}

.menu-btn {
  position: fixed;
  z-index: 3;
  bottom: 128rpx;
  height: 90rpx;
  width: 90rpx;
}

.menu {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  width: 100%;
}

.answer-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
  padding-left: 30rpx;
}

.info-area {
  display: flex;
  justify-content: space-between;
  
}

.answered {
  border: #1569E4 4rpx solid;
  color: #1569E4;
}

.unanswered {
  color: #808080;
  border: solid 2rpx #808080;
}

.line-break {
  width: 100%;
  height: 10rpx;
}

.info-con {
  height: 480rpx;
}

.exam-info {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 50%;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.switch {
  position: fixed;
  display: flex;
  width: 46%;
  height: 100rpx;
  align-items: center;
  font-size: large;
  color: #707070;
  justify-content: space-between;
  bottom: 120rpx;
}

.close-btn {
  align-self: flex-end;
  height: 80rpx;
  width: 80rpx;
  margin-right: 20rpx;
}

.current {
  background-color: rgb(250, 215, 119) !important;
  border: 4rpx solid rgb(250, 215, 119);
}

.null {

}

.score-info {
  display: flex;
  margin-top: 120rpx;
  flex-direction: column;
  align-items: center;
}

.score {
  font-size: 28rpx;
  color: #1f3141;
}

.trueAnswer {
  background-color: #4dda98;
  color: white;
}

.emptyAnswer {
  color: #808080;
  border: solid 2rpx #808080;
}

.small-icon {
  height: 32rpx;
  width: 32rpx;
  margin-right: 12rpx;
}

.wrongAnswer {
  background-color: #f77a71;
  color: white;
}

.result{
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  margin-bottom: 32rpx;
  width: 70%;
  justify-content: center;
  border: 2rpx solid #ccc;
  padding: 8rpx 30rpx 8rpx 30rpx;
  border-radius: 24rpx;
  box-shadow: 0px 2rpx 4rpx rgba(0, 0, 0, 0.1); /* 添加上边的阴影效果 */

}

.res-icon {
  height: 40rpx;
  width: 40rpx;
  margin-right: 12rpx;
}

.favor-btn {
  margin-top: 30rpx;
  margin-bottom: 10rpx;
  height: 80rpx;
  width: 300rpx;
  background-color: #2196f3;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 8rpx;
  font-size: 30rpx;
}

.feeds {
  display: flex;
  justify-content:space-between;
  align-items: center;
}

.icon {
  height: 60rpx;
  width: 60rpx;
}

.feedback {
  display: flex;
  align-items: center;
  background-color: #f0dada;
  padding: 6rpx 18rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  letter-spacing: 4rpx;
}

.commentsimg {
  width: 100%;
  height: 40vh;
}

.example {
  display: flex;
  margin-bottom: 100rpx;
  margin-left: 20rpx;
  width: 100%;
  justify-content: left;
}

.example-icon {
  display: flex;
  font-size: 26rpx;
  justify-content: center;
  align-items: center;
  margin-right: 18rpx;
  width: 18%;
  height: 44rpx;
  border-radius: 12rpx;
}

.conclusion {
  margin-left: 68rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.separator {  
  width: 90%; /* 根据需要设置宽度 */  
  height: 2rpx; /* 分隔线的高度 */  
  background-color: #ddd; /* 分隔线的颜色 */  
  margin: auto; /* 分隔线的上下外边距 */  
  margin-bottom: 20rpx;
}

.con {
  height: 540rpx;
}

progress {
  width: 340rpx;
  margin-right: 20rpx;
  border-radius: 40rpx; /* 设置进度条的圆角 */
  height: 40rpx; /* 设置进度条的高度 */
}

.progress50 .wx-progress-inner-bar {
  border-radius: 16rpx !important;
  background: linear-gradient(to right, #f3f3f3, #6dd5fa) !important;
}
.progress90 .wx-progress-inner-bar {
  border-radius: 16rpx !important;
  background: linear-gradient(to right, #f3f3f3, #6dd5fa, #2980b9) !important;  
}